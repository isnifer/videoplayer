@import url("http://fonts.googleapis.com/css?family=PT+Sans:400,700")

*
  -webkit-box-sizing: border-box
  -moz-box-sizing: border-box
  box-sizing: border-box

html, body
  height 100%
  font normal 16px "PT Sans"

body
  padding 20px
  background #7f8c8d

.b-page

  &__title
    display inline-block
    margin 0 0 10px
    margin-right 20px
    color #e67e22
    text-shadow 2px 2px 2px rgba(0,0,0,.6)
    font-weight bold
    font-size 40px
    line-height 1

  &__link
    color #f1c40f
    text-decoration none
    text-shadow 1px 1px 1px rgba(0,0,0,.4)
    font-weight bold
    font-size (18/16)*1em
    -moz-transition: text-shadow ease 0.5s
    transition: text-shadow ease 0.5s

    &:hover
      text-shadow 2px 2px 2px rgba(0,0,0,.7)

.video
  display inline-block
  margin 0 50px 50px 0
  width 460px
  background #0a0a0a
  box-shadow 2px 2px 2px #2c3e50
  vertical-align top

  &__title
    margin 0
    color #fff
    text-align center
    font-weight bold
    font-size 16px
    line-height 1.5

  video
    margin-bottom -4px
    position relative
    width 460px

.controls
  position relative
  padding 5px
  width 460px

  &__elements
    padding 8px 0 0
    height 50px

  &__item
    display inline-block
    vertical-align top

  &__play
    width 40px
    height 40px
    border-radius 2px
    text-indent -9999px
    background url(../img/play.png) no-repeat -3px -2px
    cursor pointer

    &:hover
      background-position -3px -47px

    &:active
      background-position -3px -93px

    &_paused
      background-position -53px -2px

      &:hover
        background-position -53px -47px

      &:active
        background-position -53px -93px

  &__audio-block
    padding 0 5px
    width 156px
    height 40px

  &__mute
    display inline-block
    float left
    width 40px
    height 40px
    background url(../img/mute.png) no-repeat 0 0
    vertical-align top
    text-indent -9999px
    cursor pointer

    &:hover
      background-position 0 -40px

    &:active
      background-position 0 -80px

    &_on
      background-position -40px 0

      &:hover
        background-position -40px -40px

      &:hover
        background-position -40px -80px

  &__range-wrapper
    display inline-block
    padding 8px 7px
    width 106px
    height 40px
    background url(../img/volume-bg.png) no-repeat 0 -2px
    vertical-align top

  &__volume
    position relative
    width 80px
    height 8px
    outline none
    border-radius 4px
    background url(../img/progress.png) repeat-x 0 0
    cursor pointer
    -webkit-appearance none

    &::-webkit-slider-container
      width 80px
      height 8px
      border 1px solid #373737
      border-radius 4px
      background url(../img/progress.png) repeat-x 0 0

    &::-webkit-slider-runnable-track
      width 50%
      height 7px
      border-radius 3px
      background url(../img/volume-value.png) repeat-x 0 0
      -webkit-user-modify read-write !important

    &::-webkit-slider-thumb
      position relative
      top -5px
      width 16px
      height 18px
      border-radius 50%
      background url(../img/volume-handler.png) no-repeat -1px 0
      -webkit-appearance none

  &__progress
    display block
    width 100%
    height 5px
    border 0
    vertical-align top
    cursor pointer

    &::-webkit-progress-inner-elemen
      background #252525

    &::-webkit-progress-bar
      background #373737

    &::-webkit-progress-value
      background #db5207

  &__time
    color #fff
    font-weight bold
    font-size 18px
    line-height 38px

  &__fullscreen
    float right
    width 42px
    height 40px
    background url(../img/fullscreen.png) no-repeat -2px -2px
    cursor pointer

    &:hover
      background-position -2px -52px

    &:active
      background-position -2px -102px