@import url("http://fonts.googleapis.com/css?family=Roboto+Condensed:400,300")

.controls-skin_3
  height 62px
  background #fff
  padding 0

  .controls

    &__elements
      padding 0
      height 58px
      background url(../img/skin_3/controls.png) repeat-x 0 0
      background -moz-linear-gradient(top, rgba(24,24,24,1) 0%, rgba(17,17,17,1) 42%, rgba(17,17,17,1) 100%)
      background -webkit-linear-gradient(top, rgba(24,24,24,1) 0%,rgba(17,17,17,1) 42%,rgba(17,17,17,1) 100%)
      background linear-gradient(to bottom, rgba(24,24,24,1) 0%,rgba(17,17,17,1) 42%,rgba(17,17,17,1) 100%)

    &__item
      display inline-block
      vertical-align top

    &__play
      width 64px
      height 58px
      border-radius 0
      text-indent -9999px
      background url(../img/skin_3/play.png) no-repeat 0 0
      cursor pointer
      position relative

      &:hover, &:active
        background-position 0 -58px

      &_paused
        background-position -64px 0

        &:hover, &:active
          background-position -64px -58px

      &:after
        position absolute
        display block
        height 46px
        width 1px
        background rgba(255,255,255,.1)
        content ""
        left 100%
        top 6px

    &__audio-block
      padding 0 5px
      width 156px
      height 40px

    &__mute
      display inline-block
      float left
      width 40px
      height 40px
      background url(../img/skin_3/mute.png) no-repeat 0 0
      vertical-align top
      text-indent -9999px
      cursor pointer

      &:hover
        background-position 0 -40px

      &:active
        background-position 0 -80px

      &_on
        background-position -40px 0

        &:hover
          background-position -40px -40px

        &:hover
          background-position -40px -80px

    &__range-wrapper
      display inline-block
      padding 8px 7px
      width 106px
      height 40px
      background url(../img/skin_3/volume-bg.png) no-repeat 0 -2px
      vertical-align top

    &__volume
      position relative
      width 80px
      height 8px
      outline none
      border-radius 4px
      background url(../img/skin_3/progress.png) repeat-x 0 0
      cursor pointer
      -webkit-appearance none

      &::-webkit-slider-container
        width 80px
        height 8px
        border 1px solid #373737
        border-radius 4px
        background url(../img/skin_3/progress.png) repeat-x 0 0

      &::-webkit-slider-runnable-track
        width 50%
        height 7px
        border-radius 3px
        background #8e44ad
        -webkit-user-modify read-write !important

      &::-webkit-slider-thumb
        position relative
        top -5px
        width 16px
        height 18px
        border-radius 50%
        background url(../img/skin_3/volume-handler.png) no-repeat -1px 0
        -webkit-appearance none

    &__progress
      display block
      width 100%
      height 4px
      border 0
      vertical-align top
      cursor pointer

      &::-webkit-progress-inner-elemen
        background #dd1e25

      &::-webkit-progress-bar
        background rgba(0,0,0,.5)

      &::-webkit-progress-value
        background #db5207

    &__time
      color #fff
      font 300 12px 'Roboto Condensed', sans-serif
      line-height 38px

    &__time-overall
      color #4f4f4f

    &__fullscreen
      float right
      width 42px
      height 40px
      background url(../img/skin_3/fullscreen.png) no-repeat -2px -2px
      cursor pointer

      &:hover
        background-position -2px -52px

      &:active
        background-position -2px -102px