.controls-skin_4
  position relative
  padding 0
  width 370px
  height 50px
  background #342a2d
  border-bottom-left-radius 5px
  border-bottom-right-radius 5px

  .controls

    &__item
      display inline-block
      vertical-align top

    &__play
      width 50px
      height 50px
      border-radius 0
      text-indent -9999px
      background url(../img/skin_4/play.png) no-repeat 0 0
      cursor pointer

      &:hover, &:active
        background-position 0 0

      &_paused
        background-position 0 -50px

        &:hover, &:active
          background-position 0 -50px

    &__mute
      display inline-block
      width 50px
      height 50px
      background url(../img/skin_4/mute.png) no-repeat 0 0
      vertical-align top
      text-indent -9999px
      cursor pointer
      margin 0

      &:hover, &:active
        background-position 0 0

      &_on
        background-position 0 -50px

        &:hover, &:active
          background-position 0 -50px

    &__progress
      display inline-block
      width 194px
      height 5px
      border 0
      vertical-align top
      border-radius 3px
      cursor pointer
      overflow hidden
      margin 22px 20px 0 0

      &::-webkit-progress-inner-element
        background #000000

      &::-webkit-progress-bar
        background #000000

      &::-webkit-progress-value
        background #fff

    &__time
      color #fff
      font normal 11px "Arial" 
      line-height 50px