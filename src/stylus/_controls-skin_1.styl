.controls-skin_1
  position relative
  padding 5px
  width 460px

  .controls

    &__elements
      padding 8px 0 0
      height 50px

    &__item
      display inline-block
      vertical-align top

    &__play
      width 40px
      height 40px
      border-radius 2px
      text-indent -9999px
      background url(../img/play.png) no-repeat -3px -2px
      cursor pointer

      &:hover
        background-position -3px -47px

      &:active
        background-position -3px -93px

      &_paused
        background-position -53px -2px

        &:hover
          background-position -53px -47px

        &:active
          background-position -53px -93px

    &__audio-block
      padding 0 5px
      width 156px
      height 40px

    &__mute
      display inline-block
      float left
      width 40px
      height 40px
      background url(../img/mute.png) no-repeat 0 0
      vertical-align top
      text-indent -9999px
      cursor pointer

      &:hover
        background-position 0 -40px

      &:active
        background-position 0 -80px

      &_on
        background-position -40px 0

        &:hover
          background-position -40px -40px

        &:hover
          background-position -40px -80px

    &__range-wrapper
      display inline-block
      padding 8px 7px
      width 106px
      height 40px
      background url(../img/volume-bg.png) no-repeat 0 -2px
      vertical-align top

    &__volume
      position relative
      width 80px
      height 8px
      outline none
      border-radius 4px
      background url(../img/progress.png) repeat-x 0 0
      cursor pointer
      -webkit-appearance none

      &::-webkit-slider-container
        width 80px
        height 8px
        border 1px solid #373737
        border-radius 4px
        background url(../img/progress.png) repeat-x 0 0

      &::-webkit-slider-runnable-track
        width 50%
        height 7px
        border-radius 3px
        background #e74c3c
        -webkit-user-modify read-write !important

      &::-webkit-slider-thumb
        position relative
        top -5px
        width 16px
        height 18px
        border-radius 50%
        background url(../img/volume-handler.png) no-repeat -1px 0
        -webkit-appearance none

    &__progress
      display block
      width 100%
      height 5px
      border 0
      vertical-align top
      cursor pointer

      &::-webkit-progress-inner-elemen
        background #252525

      &::-webkit-progress-bar
        background #373737

      &::-webkit-progress-value
        background #db5207

    &__time
      color #fff
      font-weight bold
      font-size 18px
      line-height 38px

    &__fullscreen
      float right
      width 42px
      height 40px
      background url(../img/fullscreen.png) no-repeat -2px -2px
      cursor pointer

      &:hover
        background-position -2px -52px

      &:active
        background-position -2px -102px