html, body
  height 100%
  font normal 16px "PT Sans"

body
  padding 20px
  background #7f8c8d

.page

  &__title
    display inline-block
    margin 0 0 10px
    margin-right 20px
    color #e67e22
    text-shadow 2px 2px 2px rgba(0,0,0,.6)
    font-weight bold
    font-size 40px
    line-height 1

  &__link
    color #f1c40f
    text-decoration none
    text-shadow 1px 1px 1px rgba(0,0,0,.4)
    font-weight bold
    font-size (18/16)*1em
    -moz-transition: text-shadow ease 0.5s
    transition: text-shadow ease 0.5s

    &:hover
      text-shadow 2px 2px 2px rgba(0,0,0,.7)