.controls
  position relative
  padding 5px
  width 460px
  background #0a0a0a

  &__elements
    padding 8px 0 0
    height 50px

  &__item
    display inline-block
    vertical-align top
    margin-right 10px

  &__play
    width 40px
    height 40px
    border-radius 2px
    text-indent -9999px
    background url(../img/default/play.png) no-repeat -3px -2px
    cursor pointer

    &:hover
      background-position -3px -47px

    &:active
      background-position -3px -93px

    &_paused
      background-position -53px -2px

      &:hover
        background-position -53px -47px

      &:active
        background-position -53px -93px

  &__mute
    display inline-block
    width 40px
    height 40px
    background url(../img/default/mute.png) no-repeat 0 0
    vertical-align top
    border-radius 2px
    text-indent -9999px
    cursor pointer

    &:hover
      background-position 0 -40px

    &:active
      background-position 0 -80px

    &_on
      background-position -40px -40px

      &:hover
        background-position -40px -40px

      &:active
        background-position -40px -80px

  &__volume
    position relative
    width 80px
    height 8px
    margin-top 15px 
    outline none
    border-radius 4px
    background transparent
    cursor pointer
    -webkit-appearance none

    &::-webkit-slider-container
      width 80px
      height 8px
      border 1px solid #373737
      border-radius 4px
      background transparent

    &::-webkit-slider-runnable-track
      width 50%
      height 7px
      border-radius 3px
      background url(../img/default/volume-value.png) repeat-x 0 0
      -webkit-user-modify read-write !important

    &::-webkit-slider-thumb
      position relative
      top -5px
      width 16px
      height 18px
      border-radius 50%
      background url(../img/default/volume-handler.png) no-repeat -1px 0
      -webkit-appearance none

  &__progress
    display block
    width 100%
    height 5px
    border 0
    vertical-align top
    cursor pointer

    &::-webkit-progress-inner-element
      background #252525

    &::-webkit-progress-bar
      background #373737

    &::-webkit-progress-value
      background #db5207

  &__time
    color #fff
    font-weight bold
    font-size 18px
    line-height 38px
    margin-right 4px

  &__fullscreen
    float right
    width 42px
    height 40px
    background url(../img/default/fullscreen.png) no-repeat -2px -2px
    cursor pointer
    margin 0

    &:hover
      background-position -2px -52px

    &:active
      background-position -2px -102px

  &.controls-skin_default

    .controls__progress
      margin-bottom 5px